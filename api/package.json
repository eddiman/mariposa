{
  "name": "mariposa",
  "version": "1.0.0",
  "description": "Note-taking server with CRUD API storing notes as local .md files",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js"
  },
  "keywords": [
    "notes",
    "markdown",
    "api"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "multer": "^2.0.2",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
